<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.henryejemuta.journalapp"
    android:installLocation="preferExternal">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/SplashTheme"/>
        <activity
            android:name=".signup.SignUpActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/SplashTheme"/>
        <activity
            android:name=".resetpassword.ResetPasswordActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/SplashTheme">
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.VIEW"/>-->
                <!--<category android:name="android.intent.category.DEFAULT"/>-->
                <!--<category android:name="android.intent.category.BROWSABLE"/>-->
                <!--<data android:host="ejournalalc3.page.link" android:scheme="http"/>-->
                <!--<data android:host="ejournalalc3.page.link" android:scheme="https"/>-->
            <!--</intent-filter>-->
        </activity>
        <activity
            android:name=".journals.JournalsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.OverlapSystemBar"/>
        <activity
            android:name=".addjournal.AddJournalActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.OverlapSystemBar"/>
        <activity
            android:name=".journaldetails.JournalDetailActivity"
            android:screenOrientation="portrait"/>

    </application>

</manifest>